<!--pages/components/infoItem/infoItem.wxml-->
<view class="info-item">
  <view class="box-left">
    <image class="user-photo" src="{{photo}}"/>
  </view> 
  <view class="box-right">
    <!--头部  -->
    <view class="post-header">
      <text class="user-name">{{name}}</text>
      <text class="tag red-tag" wx:if="{{isTop}}">置顶</text>
      <text class="tag blue-tag">{{tag}}</text>
      <button class="call" bindtap='toCall'>
        <image class="call-icon" src="../../../static/image/tel.svg"/>
        拨打电话
      </button> 
    </view>
    <!--帖子详情  -->
    <view class="post-detail" style="{{setDetail}}">
      {{detail}}
      <view class="show-more" bindtap='showMore'>
       {{showMore}}
      </view>
    </view>
    <!--帖子配图  -->
    <view class="post-img">
      <view class="img-box" wx:for="{{images}}" wx:for-index="idx" wx:key="unique" wx:if="{{idx<3}}">
        <image class="set-img" src="{{item}}"/>
         <text class="img-num" wx:if="{{images.length>3&&idx===2}}">共{{imgNum}}张</text> 
      </view> 
    </view>
    <view class="address">{{address}}</view>
    <!--帖子数据统计  -->
    <view class="post-data">
      <text>{{pubTime}}</text>
      <view>
        <image class="set-icon" src="../../../static/image/browse.svg"/>
        {{browse}}
       <image class="set-icon" src="../../../static/image/reply.svg"/>
        {{comments}}
      </view>
    </view>
  </view>
</view>

