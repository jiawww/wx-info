/* pages/publish/create-post/create-post.wxss */
.list{
  font-size:32rpx;
  margin-bottom:20rpx;
}
.list-item{
  background-color:#fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom:2rpx solid #ddd; 
  padding :20rpx; 
}
.set-input{
  /* text-align:left; */
  border:1px solid red;
}
.set-textarea{
  text-align: left;
}
.img-list{
 display:flex;
 flex-wrap:wrap;
}
.img-box{
  width:180rpx;
  height:180rpx;
  margin:10rpx;
  position: relative;
}
.pre-img{
  width:100%;
  height:100%;
}
.btn-close{
  font-size:26rpx;
  position: absolute;
  top:0;
  right:0;
  padding:10rpx;
  background-color: #4c4c4c;
  color:#fff;
}
.btn-camera{
  width:180rpx;
  height:180rpx;
  line-height:180rpx;
  margin:10rpx;
  background-color: #ccc;
  color:#fff;
  text-align: center;
  font-size:80rpx;
}